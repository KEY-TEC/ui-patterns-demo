{# Main #}
{% block main %}
  <div class="page-header" style="background-color: #f7f7f9; margin-top: -15px;">
    <div class="container">
      <a href="https://github.com/nuvoleweb/ui-patterns-demo" target="_blank"><img class="github-ribbon" src="https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png"></a>
      <h1>
        <div class="pull-right">
          <a href="https://travis-ci.org/nuvoleweb/ui_patterns/builds" target="_blank"><img src="https://travis-ci.org/nuvoleweb/ui_patterns.svg?branch=8.x-1.x"></a>
          <a href="https://scrutinizer-ci.com/g/nuvoleweb/ui_patterns/?branch=8.x-1.x" target="_blank"><img src="https://scrutinizer-ci.com/g/nuvoleweb/ui_patterns/badges/quality-score.png?b=8.x-1.x"></a>
          <a href='http://ui-patterns.readthedocs.io/en/8.x-1.x/?badge=8.x-1.x'><img src='https://readthedocs.org/projects/ui-patterns/badge/?version=8.x-1.x' alt='Documentation Status' /></a>
        </div>
        UI Patterns<br>
        <small>
          Install the <a href="https://www.drupal.org/project/ui_patterns" target="_blank">UI Patterns</a> module and click <a href="{{ url('ui_patterns.patterns.overview') }}">here</a> to visit the Patterns Overview page.
        </small>
      </h1>
    </div>
  </div>

  <div role="main" class="main-container container">
    <div class="row">
      {# Content #}
      <section{{ content_attributes.addClass('col-sm-12') }}>

        {# Action Links #}
        {% if action_links %}
          {% block action_links %}
            <ul class="action-links">{{ action_links }}</ul>
          {% endblock %}
        {% endif %}

        {# Content #}
        {% block content %}
          <a id="main-content"></a>
          {{ page.highlighted }}
          {{ page.content }}
        {% endblock %}
      </section>
    </div>
  </div>
{% endblock %}

<footer class="footer container text-center" role="contentinfo">
  <small class="text-muted">
    Demo site for the <a href="https://www.drupal.org/project/ui_patterns" target="_blank">UI Patterns</a> module.
